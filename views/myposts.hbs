
    {{#each posts}}
    <div class="uk-card uk-card-default uk-width-1-1@m">
        <div class="uk-card-header">
            <div class="uk-grid-small uk-flex-middle" uk-grid>
                    <img class="uk-border-rounded" src="{{this.avatar}}" width="80" height="80" alt="Border rounded">
                <div class="uk-width-expand">
                    <h3 class="uk-card-title uk-margin-remove-bottom">{{{this.title}}}</h3>
                    <p class="uk-text-meta uk-margin-remove-top">{{this.user}}</p>
                </div>
            </div>
        </div>
        <div class="uk-card-body">
            <p>{{this.body}}</p>
        </div>
        <div class="uk-card-footer ">
            <div>
                <div class="uk-button-group uk-flex uk-flex-center">
                    <a href="/posts/{{this.slug}}" class="uk-button uk-button-primary uk-button-small">Show</a>
                    <a href="/posts/edit/{{this._id}}" class="uk-button uk-button-secondary uk-button-small ">Edit</a>
                    <form action="/posts/{{this._id}}?_method=DELETE" method="post">
                        <button class="uk-button uk-button-danger uk-button-small">Delete</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
    {{/each}}
