{{#if todo_OK}}
<div class="uk-alert-success mt-5 .uk-width-expand" uk-alert>
    <a class="uk-alert-close" uk-close></a>
    <p>{{todo_OK}}</p>
</div>
{{/if}}

{{#if todo_error}}
<div class="uk-alert-danger mt-5 .uk-width-expand" uk-alert>
    <a class="uk-alert-close" uk-close></a>
    <p>{{todo_error}}</p>
</div>
{{/if}}

<div class="uk-height-large uk-card uk-card-default uk-card-body uk-flex uk-flex-center uk-flex-middle mt-3">
    <form id="formAuth" class="mt-3 p-3" action="/auth/signin" method="post">

        <h3>Login</h3>
        <div class="uk-margin">
            <label class="uk-form-label" for="email">Correo Electronico: </label>
            <div class="uk-inline">
                <span class="uk-form-icon" uk-icon="icon: user"></span>
                <input class="uk-input" type="email" aria-label="Not clickable icon" id="email" name="email"
                    placeholder="example@gmail.com">
            </div>
        </div>

        <div class="uk-margin">
            <label class="uk-form-label" for="password">Contrase√±a: </label>
            <div class="uk-inline">
                <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
                <input class="uk-input" type="password" aria-label="Not clickable icon" id="password" name="password"
                    placeholder="Password">
            </div>
        </div>
        <div class="uk-button-group uk-flex uk-flex-center">
            <button class="uk-button uk-button-secondary mt-3">
                Signin
            </button>
            <button class="uk-button uk-button-secondary mt-3">
                <a href="/auth/signup">Register</a>
            </button>
        </div>

    </form>
</div>